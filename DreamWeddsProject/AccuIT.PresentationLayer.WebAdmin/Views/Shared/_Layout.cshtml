@using AccuIT.BusinessLayer.Services.BO;
@using AccuIT.PresentationLayer.WebAdmin.Core;
@using System.Web.Optimization;
@using AccuIT.PresentationLayer.WebAdmin.CustomFilter;

<!DOCTYPE html>

<html>
<head>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

    <title>@ViewBag.Title</title>
    <link href="~/Content/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @*@Styles.Render("~/Classic/css")*@
    @Styles.Render("~/Exclusive/css")
    <link href="~/Content/Exclusive/plugins/timepicker/bootstrap-timepicker.min.css" rel="stylesheet" />
    <link href="~/Content/Exclusive/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    @*<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />*@
    <!-- Ionicons -->
    @*<link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />*@

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
        .example-modal .modal {
            position: relative;
            top: auto;
            bottom: auto;
            right: auto;
            left: auto;
            display: block;
            z-index: 1;
        }

        .example-modal .modal {
            background: transparent !important;
        }
    </style>
</head>

<body class="skin-blue sidebar-mini">
    <!-- Preloader Start -->
    @*<div id="preloader">
            <i class="fa fa-spinner fa-spin preloader-animation" aria-hidden="true"></i>
        </div>*@
    <!-- Preloader End -->
    <div class="wrapper">
        @{

            if (HttpContext.Current.Session[PageConstants.SESSION_PROFILE_KEY] != null)
            {
                var EmployeeInfo = (UserProfileBO)Session[PageConstants.SESSION_PROFILE_KEY];

                <header class="main-header">
                    <!-- Logo -->
                    <a href="@Url.Action("Index","Home")" class="logo">
                        <!-- mini logo for sidebar mini 50x50 pixels -->
                        <span class="logo-mini"><b>A</b>LT</span>
                        <!-- logo for regular state and mobile devices -->
                        <span class="logo-lg"><b>ACCU</b>IT</span>
                    </a>
                    <!-- Header Navbar: style can be found in header.less -->
                    <nav class="navbar navbar-static-top" role="navigation">
                        <!-- Sidebar toggle button-->
                        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>

                        <div class="navbar-custom-menu">
                            <ul class="nav navbar-nav">
                             
                                <!-- User Account: style can be found in dropdown.less -->
                                <li class="dropdown user user-menu">


                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <img src="@EmployeeInfo.ImagePath" class="user-image" alt="@EmployeeInfo.FirstName">
                                        <span class="hidden-xs">@EmployeeInfo.FirstName @EmployeeInfo.LastName</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <!-- User image -->
                                        <li class="user-header">
                                            <img src="@EmployeeInfo.ImagePath" class="img-circle" alt="@EmployeeInfo.FirstName">
                                            <p>
                                                @EmployeeInfo.FirstName &nbsp; @EmployeeInfo.LastName
                                                <small>Member since @Html.Label(Convert.ToDateTime(EmployeeInfo.CreatedDate).ToShortDateString())</small>
                                            </p>
                                        </li>
                                        <!-- Menu Body -->
                                        @*<li class="user-body">
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Followers</a>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Sales</a>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Friends</a>
                                            </div>
                                        </li>*@
                                        <!-- Menu Footer-->
                                        <li class="user-footer">
                                            <div class="pull-left">
                                                <a href="@Url.Action("Index", "Home")" class="btn btn-default btn-flat">Profile</a>
                                            </div>
                                            <div class="pull-right">
                                                <a href="@Url.Action("LogOut", "Account")" class="btn btn-default btn-flat">Sign out</a>
                                            </div>
                                        </li>
                                    </ul>
                                </li>

                                <!-- Control Sidebar Toggle Button -->
                                <li>
                                    &nbsp; &nbsp; @*<a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>*@
                                </li>
                            </ul>
                        </div>
                    </nav>
                </header>

            <!-- Left side column. contains the logo and sidebar -->
                <aside class="main-sidebar">
                    <!-- sidebar: style can be found in sidebar.less -->
                    <section class="sidebar">
                        <!-- Sidebar user panel -->
                        <div class="user-panel">
                            <div class="pull-left image">
                                <img src="@Url.Content(@EmployeeInfo.ImagePath)" class="img-circle" alt="@EmployeeInfo.FirstName" />
                            </div>
                            <div class="pull-left info">
                                <p>@EmployeeInfo.FirstName</p>
                                <a href="#"><i class="fa fa-circle text-success"></i>Online</a>
                            </div>
                        </div>


                        @RenderSection("SidebarMenu", required: false)

                    </section>
                    <!-- /.sidebar -->
                </aside>
            }
        }
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 916px;">

            <section class="content-header">
                @RenderSection("breadcrumb", required: false)
            </section>

            <!-- Main content -->
            <section class="content">
                <input id="ShowPopup" name="ShowPopup" type="hidden" value="@ViewBag.ShowPopup" />
                <input id="ShowErrPopup" name="ShowErrPopup" type="hidden" value="@ViewBag.ShowErrPopup" />
                @RenderBody()
            </section>
            <!-- /.content -->

        </div>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.0
            </div>
            <strong>Copyright &copy; 2016 <a href="http://accuit.net">AccuIT Technologies</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->

    </div>

    <button type="button" id="btnModal" class="btn btn-default" style="display:none;" data-toggle="modal" data-target="#modal-default" data-backdrop="static" data-keyboard="false">
        Launch Default Modal
    </button>
    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Alert!</h4>
                </div>
                <div class="modal-body">
                    @if (ViewBag.IsSuccess == true)
                    {
                        <p id="AlertMsg"> @ViewBag.Message</p>
                    }
                    else if (ViewBag.IsSuccess == false)
                    {
                        <p class="text-red" id="AlertMsg"> @ViewBag.ErrMessage</p>
                    }

                </div>
                <div class="modal-footer">
                    <button type="button" style="text-align:center" class="btn btn-primary" data-dismiss="modal">OKAY</button>

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>



    @Scripts.Render("~/Classic/scripts")
    @*@Scripts.Render("~/Exclusive/scripts")*@

    @*<script src="~/Content/Exclusive/bower_components/jquery/dist/jquery.min.js"></script> 
    <script src="~/Content/Exclusive/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Content/Exclusive/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Content/Exclusive/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/Exclusive/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/Exclusive/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/Exclusive/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="~/Content/Exclusive/bower_components/fastclick/lib/fastclick.js"></script>
    <script src="~/Content/Exclusive/dist/js/adminlte.min.js"></script>
    <script src="~/Content/Exclusive/dist/js/demo.js"></script>*@
    <script src="~/Content/js/material-bootstrap-wizard.js"></script>
    <script src="~/Content/Exclusive/plugins/timepicker/bootstrap-timepicker.min.js"></script>

   
    <!-- page script -->
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>

</html>
