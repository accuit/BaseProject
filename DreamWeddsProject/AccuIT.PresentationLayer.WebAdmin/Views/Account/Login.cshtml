@model AccuIT.PresentationLayer.WebAdmin.Models.LoginViewModel
@{
    ViewBag.Title = "Employee Login";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
{

    <input id="lblerrmessage" name="lblerrmessage" type="hidden" value="@ViewBag.Messasge" />
    <input id="ShowPopup" name="ShowPopup" type="hidden" value="@ViewBag.ShowPopup" />
    <input id="ShowErrPopup" name="ShowErrPopup" type="hidden" value="@ViewBag.ShowErrPopup" />
    <input id="hdLoginUserType" name="hdLoginUserType" type="hidden" value="@ViewBag.hdLoginUserType" />
    <p class="login-box-msg">Sign in to start your session</p>
    <form method="post">
        <div class="form-group has-feedback">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Email", type = "email", @required = true })
            @Html.ValidationMessageFor(m => m.UserName)
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password", @required = true })
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        @*&nbsp; &nbsp; &nbsp; &nbsp; <input type="checkbox"> Remember Me*@
                        &nbsp; &nbsp; &nbsp; @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </label>
                </div>
            </div><!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" id="submit" value="Save" class="btn btn-danger">Sign In</button>
            </div><!-- /.col -->
        </div>
    </form>
    <div class="social-auth-links text-center">


    </div><!-- /.social-auth-links -->

    <a href="@Url.Action("ForgetPassword", "Account")">I forgot my password</a><br>
    if (ViewBag.hdLoginUserType == "customer")
    {
        <a href="@Url.Action("Register", "Account", new { loginusertype = "customer" })" class="text-center">Register a new membership</a>
    }
    else
    {
        <a href="@Url.Action("Register", "Account")" class="text-center">Register a new membership</a>
    }


    <button type="button" id="btnModal" style="display:none;" class="btn btn-default" data-toggle="modal" data-target="#modal-default" data-backdrop="static" data-keyboard="false">
        Launch Default Modal
    </button>
    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Alert!</h4>
                </div>
                <div class="modal-body">
                    @if (ViewBag.IsSuccess == true)
                    {
                        <p id="AlertMsg"> @ViewBag.Message</p>
                    }
                    else if (ViewBag.IsSuccess == false)
                    {
                        <p class="text-red" id="AlertMsg"> @ViewBag.Message</p>
                    }

                </div>
                <div class="modal-footer">
                    <button type="button" style="text-align:center" class="btn btn-primary" data-dismiss="modal">OKAY</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
}



