            </div>
            <div class="modal-footer">
                <button type="button" style="text-align:center" class="btn btn-primary" data-dismiss="modal">OKAY</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
