</head>

<body>

    <div class="image-container set-full-height" style="background-image: url(@Model.WeddingBO.TemplateImageUrl); height: auto;">
        <!--   Creative Tim Branding   -->
        <a href="http://creative-tim.com">
            <div class="logo-container">
                <div class="logo">
                    <img src="assets/img/new_logo.png">
                </div>
                <div class="brand">
                    Creative Tim
                </div>
            </div>
        </a>

        <!--  Made With Material Kit  -->
        <a href="http://demos.creative-tim.com/material-kit/index.html?ref=material-bootstrap-wizard" class="made-with-mk">
            <div class="brand">MK</div>
            <div class="made-with">Made with <strong>Material Kit</strong></div>
        </a>

        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-sm-offset-2" style="margin: 0px;">
                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="orange" id="wizardProfile">
                            <div class="wizard-header">
                                <h3 class="wizard-title">
                                    Complete your Wedding Details
                                </h3>
                                <h5>This information will show up in your wedding website.</h5>
                            </div>
                            <div class="wizard-navigation">
                                <ul class="nav nav-pills">
                                    @if (ViewBag.WeddingForm != null && ViewBag.WeddingForm)
                                    {
                                        
                                        <li class="active"><a href="#wedding" data-toggle="tab" aria-expanded="true">Wedding</a></li>
                                    }
                                    else
                                    {
                                        <li class=""><a href="#wedding" data-toggle="tab" aria-expanded="true">Wedding</a></li>
                                    }

                                    @if (ViewBag.BrideMaidForm != null && ViewBag.BrideMaidForm == true)
                                    {
                                        Ajax.ActionLink("Bride&Maids", "_WizardBrideMaids", @Model.WeddingBO.WeddingID, new AjaxOptions()
                                        {
                                            HttpMethod = "Get",
                                            UpdateTargetId = "bride",
                                            InsertionMode = InsertionMode.Replace
                                        }, new { @class = "active", @data_toggle = "tab", @aria_expanded = "true" });
                                        @*<li class=""><a href="#bride" data-toggle="tab" aria-expanded="false">Bride - Maids</a></li>*@
                                    }
                                    else
                                    {
                                        Ajax.ActionLink("Bride&Maids", "_WizardBrideMaids", @Model.WeddingBO.WeddingID, new AjaxOptions()
                                        {
                                            HttpMethod = "Get",
                                            UpdateTargetId = "bride",
                                            InsertionMode = InsertionMode.Replace
                                        }, new { @class = "", @data_toggle = "tab", @aria_expanded = "false" });
                                    }

                                    @if (ViewBag.GroomMenForm != null && ViewBag.GroomMenForm == true)
                                    {
                                        <li class="active"><a href="#groom" data-toggle="tab" aria-expanded="false">Groom-Men</a></li>
                                    }
                                    else
                                    {
                                        <li class=""><a href="#groom" data-toggle="tab" aria-expanded="false">Groom-Men</a></li>
                                    }

                                    @if (ViewBag.EventForm != null && ViewBag.EventForm == true)
                                    {
                                        <li class="active"><a href="#event" data-toggle="tab" aria-expanded="true">Events</a></li>
                                    }
                                    else
                                    {
                                        <li class=""><a href="#event" data-toggle="tab" aria-expanded="true">Events</a></li>
                                    }
                                    <li class=""><a href="#timeline" data-toggle="tab" aria-expanded="false">TimeLine</a></li>
                                    <li class=""><a href="#gallery" data-toggle="tab" aria-expanded="false">Gallery</a></li>
                                </ul>
                                <div class="moving-tab" style="width: 380px; transform: translate3d(-8px, 0px, 0px); transition: all 0.5s cubic-bezier(0.29, 1.42, 0.79, 1);">About</div>
                            </div>

                            <div class="tab-content">
                                <div class="tab-pane active" id="wedding">
                                    @if (ViewBag.WeddingForm != null && ViewBag.WeddingForm)
                                    {
                                        @Html.Partial("_WizardWedding", Model)

                                    }
                                </div>
                                <div class="tab-pane" id="bride">
                                    <h4 class="info-text"> Bride and Bride Maids </h4>
                                    @if (ViewBag.BrideMaidForm != null && ViewBag.BrideMaidForm == true)
                                    {
                                        using (Html.BeginForm("_WizardBrideMaids", "Wedding", FormMethod.Post))
                                        {

                                            @Html.Partial("_WizardBrideMaids", Model)
                                        }
                                    }
                                </div>
                                <div class="tab-pane" id="groom">
                                    <h4 class="info-text"> Bride and Bride Maids </h4>
                                    @if (ViewBag.GroomMenForm != null && ViewBag.GroomMenForm == true)
                                    {
                                        using (Html.BeginForm("_WizardBrideMaids", "Wedding", FormMethod.Post))
                                        {

                                            @Html.Partial("_WizardBrideMaids", Model)
                                        }
                                    }
                                </div>
                                <div class="tab-pane" id="event">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h4 class="info-text"> Are you living in a nice area? </h4>
                                        </div>
                                        <div class="col-sm-7 col-sm-offset-1">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Street Name</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Street Number</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">City</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-5">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Country</label>
                                                <select name="country" class="form-control">
                                                    <option disabled="" selected=""></option>
                                                    <option value="Afghanistan"> Afghanistan </option>
                                                    <option value="Albania"> Albania </option>
                                                    <option value="Algeria"> Algeria </option>
                                                    <option value="American Samoa"> American Samoa </option>
                                                    <option value="Andorra"> Andorra </option>
                                                    <option value="Angola"> Angola </option>
                                                    <option value="Anguilla"> Anguilla </option>
                                                    <option value="Antarctica"> Antarctica </option>
                                                    <option value="...">...</option>
                                                </select>
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="timeline">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h4 class="info-text"> Are you living in a nice area? </h4>
                                        </div>
                                        <div class="col-sm-7 col-sm-offset-1">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Street Name</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Street Number</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">City</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-5">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Country</label>
                                                <select name="country" class="form-control">
                                                    <option disabled="" selected=""></option>
                                                    <option value="Afghanistan"> Afghanistan </option>
                                                    <option value="Albania"> Albania </option>
                                                    <option value="Algeria"> Algeria </option>
                                                    <option value="American Samoa"> American Samoa </option>
                                                    <option value="Andorra"> Andorra </option>
                                                    <option value="Angola"> Angola </option>
                                                    <option value="Anguilla"> Anguilla </option>
                                                    <option value="Antarctica"> Antarctica </option>
                                                    <option value="...">...</option>
                                                </select>
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="gallery">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <h4 class="info-text"> Are you living in a nice area? </h4>
                                        </div>
                                        <div class="col-sm-7 col-sm-offset-1">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Street Name</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Street Number</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-5 col-sm-offset-1">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">City</label>
                                                <input type="text" class="form-control">
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-5">
                                            <div class="form-group label-floating is-empty">
                                                <label class="control-label">Country</label>
                                                <select name="country" class="form-control">
                                                    <option disabled="" selected=""></option>
                                                    <option value="Afghanistan"> Afghanistan </option>
                                                    <option value="Albania"> Albania </option>
                                                    <option value="Algeria"> Algeria </option>
                                                    <option value="American Samoa"> American Samoa </option>
                                                    <option value="Andorra"> Andorra </option>
                                                    <option value="Angola"> Angola </option>
                                                    <option value="Anguilla"> Anguilla </option>
                                                    <option value="Antarctica"> Antarctica </option>
                                                    <option value="...">...</option>
                                                </select>
                                                <span class="material-input"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div><!-- end row -->
        </div> <!--  big container -->

        <div class="footer">
            <div class="container text-center">
                Managed and developed <i class="fa fa-heart heart"></i> by <a href="http://www.accuitech.com">AccuIT Technologies</a>.
                Free download <a href="http://www.creative-tim.com/product/bootstrap-wizard">here.</a>
            </div>
        </div>
    </div>



