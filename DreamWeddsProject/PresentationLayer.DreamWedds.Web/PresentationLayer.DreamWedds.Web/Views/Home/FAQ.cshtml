@using PresentationLayer.DreamWedds.Web.Models;
@model DreamweddsModel
@{
    ViewBag.Title = "Frequently Asked Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- PAGE TITLE START -->
@section PageTitle{
    <section id="title" class="container-fluid wow fadeInDown">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-xs-6 text-right breadcrumbs">
                    <ul class="list-inline list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li>/</li>
                        <li>@ViewBag.Title</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
}


<section id="page-content">

    <div id="services-1" class="container padding35">
        <div class="row">

            <div class="col-md-9 wow fadeInLeft" style="visibility: visible; animation-name: fadeInLeft;">

                <h3 class="text-uppercase">Find all the answers   <b>you need</b></h3>

                <div class="space20"></div>
                
                <div class="panel-group" id="accordion">
                    @foreach (var item in Model.faqs.OrderBy(x => x.FAQID))
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse-@item.FAQID">
                                        @item.Question
                                        <span class="pull-right"><i class="fa fa-question-circle"></i></span>
                                    </a>
                                </h4>
                            </div>
                            @if(@item.FAQID == 1)
                            {
                            <div id="collapse-@item.FAQID" class="panel-collapse collapse in" aria-expanded="true" style="">
                                <div class="panel-body">
                                    @item.Answer
                                </div>
                            </div>
                            }
                            else
                            {
                            <div id="collapse-@item.FAQID" class="panel-collapse collapse" aria-expanded="true" style="">
                                <div class="panel-body">
                                    @item.Answer
                                </div>
                            </div>
                            }
                        </div>
                    }
                </div>

            </div>

            <div id="sidebar" class="col-md-3 wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
                <div class="widget widget-support bg-dark">
                    <img alt="" class="img-responsive" src="images/other/support.jpg">
                    <div class="inner">
                        <h4 class="text-uppercase">Couldn't find your answer?</h4>
                        <p>
                            In case you do not find your answer here, don't worry. Ask your query <a href="@Url.Action("Contact","Home")">here</a> or write us at info@dreamwedds.com.
                            Your feedback and suggestions are always seeked by us.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>



</section>
